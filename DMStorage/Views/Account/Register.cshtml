@using (Html.BeginForm("Register", "Account"))
{
    <div class="myContainerLogin center-div text-info">

        @Html.AntiForgeryToken()
        <div class="col-4 my-border justify-content-center align-content-center">
            <h1 class="text-center mb-5 my-text-shadow">Register</h1>

            <div class="row text-right justify-content-center">
                @*                 <div class="form-group mt-1 col-md-4">
            @Html.LabelFor(x => x.Username)
            </div> *@
                <div class="form-group mt-1 ml-1 col-md-6">
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control bg-dark text-light", placeholder = "Nazev uzivatele" })
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="row text-right justify-content-center">
                @*                 <div class="form-group mt-1 col-md-4">
            @Html.LabelFor(x => x.Email)
            </div> *@
                <div class="form-group mt-1 ml-1 col-md-6">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control bg-dark text-light", placeholder = "E-mail" })
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row text-right justify-content-center">
                @*                 <div class="form-group mt-1 col-md-4">
            @Html.LabelFor(x => x.Password)
            </div> *@
                <div class="form-group mt-1 ml-1 col-md-6">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control bg-dark text-light", placeholder = "Heslo" })
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row text-right justify-content-center mt-3">
                <button type="submit" class="btn btn-primary mr-5">Register</button>
                <a class="text-info ml-5 mt-2" asp-controller="Account" asp-action="Login">Login</a>
            </div>
        </div>
    </div>
}