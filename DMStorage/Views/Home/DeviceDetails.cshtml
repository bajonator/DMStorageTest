    <td>
    @variable.Ip
    </td>
    <td>
    @variable.MacAdress
    </td>
    <td>
    @variable.Description
    </td>
    </tr>
    }
    </tbody>
    </table> *@


    <div class="row d-flex justify-content-between align-bottom mr-2 ml-2 mt-5">
        @if (typeDeviceId.HasValue)
        {
            <a style="color: red" href="@Url.Action("Details", "Home", new { type = "deviceType", id = TempData["typeDeviceId"] })">Zpet k typu zarizeni</a>
        }
        <a style="color: red" href="@Url.Action("Lists", "Home")">Zpet k listu</a>
        <a style="color: red" href="@Url.Action("Index", "Home")">Home</a>
    </div>
</div>

