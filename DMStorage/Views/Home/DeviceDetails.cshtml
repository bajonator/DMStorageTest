@model DMStorage.Core.ViewModels.DeviceViewModel

@{
    ViewData["Title"] = "Device detail";
    int? typeDeviceId = TempData["TypeDeviceId"] as int?;
}

<div class="mt-5 container my-border">
    <h2>Detajle zarizeni:</h2>

    <div class="row">
        <div class="col-md-2"><strong>Typ zarizeni:</strong></div>
        <div class="col-md-9">@Model.TypeDevice.Name</div>
    </div>
    <div class="row">
        <div class="col-md-2"><strong>Nazev:</strong></div>
        <div class="col-md-9">@Model.Device.Name</div>
    </div>
    <div class="row">
        <div class="col-md-2"><strong>Oddeleni:</strong></div>
        <div class="col-md-9">@Model.Device.Department?.Name</div>
    </div>
    <div class="row">
        <div class="col-md-2"><strong>Stroj:</strong></div>
        <div class="col-md-9">@Model.Device.Machine?.Name</div>
    </div>
    <div class="row">
        <div class="col-md-2"><strong>Serial Number:</strong></div>
        <div class="col-md-9">@Model.Device.SerialNumber</div>
    </div>
    <div class="row">
        <div class="col-md-2"><strong>Inventory Number:</strong></div>
        <div class="col-md-9">@Model.Device.InventoryNumber</div>
    </div>
    <div class="row">
        <div class="col-md-2"><strong>MacAdress:</strong></div>
        <div class="col-md-9">@Model.Device.MacAdress</div>
    </div>
    <div class="row">
        <div class="col-md-2"><strong>IP:</strong></div>
        <div class="col-md-9">@Model.Device.Ip</div>
    </div>
    <div class="row">
        <div class="col-md-2"><strong>State:</strong></div>
        <div class="col-md-9">@Model.Device.State</div>
    </div>
    @if (ViewData["UserRoles"] != null && ((IList<string>)ViewData["UserRoles"]).Contains("FiOT"))
    {
        <div class="row">
            <div class="col-md-2"><strong>WPAUserName:</strong></div>
            <div class="col-md-9">@Model.Device.WPAUserName</div>
        </div>
        <div class="row">
            <div class="col-md-2"><strong>WPAUserName:</strong></div>
            <div class="col-md-9">@Model.Device.WPAPassword</div>
        </div>
    }
    <div class="row">
        <div class="col-md-2"><strong>Description:</strong></div>
        <div class="col-md-9">@Model.Device.Description</div>
    </div>
