@model DMStorage.Core.ViewModels.ListsViewModel

<h6 style="color: #39cf6a">Seznam oddeleni</h6>
<div class="my-border">
    <ul class="col-12 scrollable-list">
        @foreach (var dep in Model.Departments)
        {
            <li>
                <a href="@Url.Action("Details", "Home", new { type = "department", id = dep.Id })">
                    <div class="row p-0 m-0">
                        <p class="text-secondary"> (@dep.Number)</p>
                        <p>  @dep.Name</p>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>