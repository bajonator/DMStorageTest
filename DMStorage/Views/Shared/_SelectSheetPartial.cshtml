@model List<string>

<h3 class="my-3 text-info text-center">Select Sheet and Model</h3>
<form id="sheetSelectionForm" class="col-12">
    <div class="form-group m-0">
        <select id="sheetSelector" name="sheetName" class="form-control bg-dark text-light">
            @foreach (var sheet in Model)
            {
                <option value="@sheet">@sheet</option>
            }
        </select>
        <div class="form-group mt-2">
            <div class="d-flex justify-content-center">
                <div class="form-check mr-5">
                    <input class="form-check-input" type="radio" name="selectedModel" id="machineModel" value="Machine" checked>
                    <label class="form-check-label" for="machineModel">Machine</label>
                </div>
                <div class="form-check ml-5">
                    <input class="form-check-input" type="radio" name="selectedModel" id="deviceModel" value="Device">
                    <label class="form-check-label" for="deviceModel">Device</label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Nacti pro mapovani</button>
    </div>
</form>
